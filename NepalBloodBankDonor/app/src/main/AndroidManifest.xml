<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.islington.nepalbloodbankdonor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".Helper.GlobalState"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="NepalBloodBankDonor" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".AppActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".AddDonorActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TipsActivity"
            android:label="@string/app_name" />
        <activity android:name=".EditProfileActivity" />
        <activity
            android:name=".DonorDetailActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".DonorListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".BloodDetailActivity"
            android:label="@string/title_activity_blood_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>