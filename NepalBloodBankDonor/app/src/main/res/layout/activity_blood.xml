<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Blood Response"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">







        <TextView
            android:id="@+id/txtname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Name : "
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/blood_name"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="19sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_blood_group"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Blood Group :"
            android:textSize="19sp"/>



    <TextView
        android:id="@+id/blood_blood_group"
        android:layout_width="0dp"
        android:layout_weight="0.5"

        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:textSize="19sp"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Quantity :"
            android:textSize="19sp"/>

    <TextView
        android:id="@+id/blood_quantity"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="19sp"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Location :"
            android:textSize="19sp"/>

    <TextView
        android:id="@+id/blood_location"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="19sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Contact :"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/blood_contact"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textSize="19sp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_weight="1">
        <Button
            android:id="@+id/blood_btn_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginRight="5dp"
            android:text="Call"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/phone"
            android:background="@drawable/gradient_button"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:textAllCaps="false"

            />
        <Button
            android:id="@+id/blood_btn_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:text="Message"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/use"
            android:paddingStart="10dp"
            android:background="@drawable/gradient_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAllCaps="false"


            />

    </LinearLayout>

</LinearLayout>