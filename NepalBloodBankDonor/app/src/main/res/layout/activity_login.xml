<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/logo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="25dp"
        android:weightSum="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/facebook_btn"
            android:text="Login With Facebook"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:padding="8dp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            />
        <EditText
            android:id="@+id/login_activity_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail"
            android:drawableLeft="@drawable/use"

            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginBottom="8dp"
            />
        <EditText
            android:id="@+id/login_activity_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/pass"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginBottom="8dp"
            android:inputType="textPassword"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Login"
                android:textColor="@color/white"
                android:background="@color/login_btn"
                android:textAllCaps="false"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                />
            <Button
                android:id="@+id/register_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Register"
                android:textColor="@color/white"
                android:background="@color/login_btn"
                android:textAllCaps="false"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>



    </LinearLayout>






</LinearLayout>