<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    android:weightSum="1"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register New User"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <EditText
            android:id="@+id/register_activity_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:drawableLeft="@drawable/use"
            android:textAlignment="center"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:id="@+id/register_activity_username_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:drawableLeft="@drawable/use"
            android:textAlignment="center"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/btnBg"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Choose District"
                android:textColor="#000000"
                />
            <Spinner
                android:id="@+id/districtselect_sp_et"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:entries="@array/district"
                android:prompt="@string/choose_district"
                android:spinnerMode="dropdown"
                android:transitionGroup="true" />
        </LinearLayout>



        <EditText
            android:id="@+id/register_activity_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail"
            android:drawableLeft="@drawable/email"
            android:textAlignment="center"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:id="@+id/register_activity_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/pass"
            android:textAlignment="center"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/register_activity_confirm_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:drawableLeft="@drawable/pass"
            android:textAlignment="center"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/register_activity_phone_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/phone"
            android:textAlignment="center"
            android:textColorHint="@color/mid_black"
            android:textSize="16sp"
            android:background="@color/btnBg"
            android:padding="8dp"
            android:singleLine="true"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            />


        <Button
            android:id="@+id/register_activity_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_btn"
            android:text="Register"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
    </ScrollView>



</LinearLayout>